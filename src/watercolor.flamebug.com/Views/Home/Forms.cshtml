				<p>
					<input type="submit" /> <input type="reset" value="Reset" />
				</p>

			</form>

		</div>

		<pre><code class="language-css">.field {
   @@include field-block;
}
/*
6 column layout
*/
@@media screen and (min-width: 30rem) {
