@inject IOptions<AppSettings> AppSettings

@{
    var title = String.IsNullOrEmpty(ViewBag.Title) ? AppSettings.Value.sitename : ViewBag.Title + " - " + AppSettings.Value.sitename;
    var description = String.IsNullOrEmpty(ViewBag.Description) ? AppSettings.Value.sitename : ViewBag.Description;
    var twitter = AppSettings.Value.sitetwitter;
    var url = "//" + AppSettings.Value.domain;
}

<!DOCTYPE html>

<html lang="en">

    <head>

        <!-- Page Metadata -->
        <meta charset="utf-8">
        <title>@title</title>
        <meta name="description" content="@description">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Favicons -->
        <link rel="icon" type="image/x-icon" href="~/images/favicon/favicon.ico" />
        <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon/favicon.ico" />
        <link rel="apple-touch-icon" href="~/images/favicon/apple-touch-icon.png" />

        <!-- Sitemap, Humans.txt -->
        <link rel="sitemap" type="application/xml" href="~/sitemap.xml" />
        <link rel="author" type="text/plain" href="~/humans.txt" />

        <!-- Facebook Metadata -->
        <meta property="og:title" content="@title" />
        <meta property="og:description" content="@description" />
        <meta property="og:type" content="@description" />
        <meta property="og:url" content="@url" />
        <meta property="og:image" content="~/images/favicon/apple-touch-icon.png" />

        <!-- Twitter Metadata -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content="@title" />
        <meta name="twitter:description" content="@description" />
        <meta name="twitter:site" content="@twitter" />
        <meta name="twitter:creator" content="@twitter" />

        <!-- Stylesheets -->
        <link rel="stylesheet" href="~/styles/css/site/site.css" />

        @RenderSection("Styles", required: false)

    </head>

    <body>

        <nav id="nav" role="navigation">

            <a id="nav-button" href="#"><i>+</i></a>
            @Html.Partial("_Navigation")

        </nav>

        <header id="header" role="banner">

            <div class="container">

                @if (IsSectionDefined("Header"))
                {
                    @RenderSection("Header")
                }
                else
                {
                    @Html.Partial("_Header")
                }

            </div>

        </header>

        <main id="main" role="main">

            @RenderBody()

        </main>

        <footer id="footer" role="contentinfo">

            @Html.Partial("_Footer")

        </footer>

        <!-- jQuery -->
        <environment names="Development">

            <script src="~/lib/jquery/jquery.js"></script>

        </environment>

        <environment names="Staging,Production">

            <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-1.10.2.min.js" asp-fallback-src="~/lib/jquery/jquery.min.js" asp-fallback-test="window.jQuery"></script>

        </environment>

        <!-- Scripts -->
        @RenderSection("Scripts", required: false)

        <!-- Responsive Menu Toggle -->
        <script>

			$(function () {

			    $("#nav-button").click(function () {
					$("#nav-button i").toggleClass("open");
					$("#nav ul").toggleClass("open");
				});

			});


        </script>

        <!-- Analytics -->
        @Html.Partial("_Analytics")

    </body>

</html>
