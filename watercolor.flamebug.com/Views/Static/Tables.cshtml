        &lt;/tr&gt;
    &lt;/thead&gt;
    &lt;tbody&gt;
        &lt;tr&gt;
            &lt;td&gt;1&lt;/td&gt;
            &lt;td&gt;Chicago&lt;/td&gt;
            &lt;td&gt;North&lt;/td&gt;
            &lt;td&gt;10-6&lt;/td&gt;
        &lt;/tr&gt;
        &lt;tr&gt;
            &lt;td&gt;2&lt;/td&gt;
            &lt;td&gt;Green Bay&lt;/td&gt;
            &lt;td&gt;North&lt;/td&gt;
            &lt;td&gt;9-7&lt;/td&gt;
        &lt;/tr&gt;
        &lt;tr&gt;
            &lt;td&gt;3&lt;/td&gt;
            &lt;td&gt;Detroit&lt;/td&gt;
            &lt;td&gt;North&lt;/td&gt;
            &lt;td&gt;8-8&lt;/td&gt;
